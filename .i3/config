        #statusline #ffffff
        separator #666666

        active_workspace   #91F8F9 #00233F #91F8F9
        focused_workspace  #00233F #00233F #91F8F9
        inactive_workspace #00233F #00233F #ecf0f1
        urgent_workspace   #e74c3c #e74c3c #ecf0f1
    }
}

