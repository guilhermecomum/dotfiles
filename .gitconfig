[user]
  name = Guilherme Guerra
  email = guilherme.ga@gmail.com
[color]
  ui = auto
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = green
  changed = yellow
  untracked = red reverse bold
[push]
  default = current
[alias]
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  update = !git pull upstream master
  sync = !git pull && git push
  up = add -up
  undo-commit = reset --soft HEAD^
  please=force-lease
  ps = push -u
  nb = checkout -b
[hub]
  protocol = https
[init]
  defaultBranch = main
[diff]
	external = difft
[pull]
	rebase = true
